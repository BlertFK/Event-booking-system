@{
    ViewData["Title"] = "Manage Users";
}

<div class="dashboard-container admin-dashboard">
    <div class="container">
        <div class="admin-page-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="bi bi-people"></i> User Management</h1>
                    <p class="mb-0">Manage user accounts, roles, and permissions</p>
                </div>
                <a asp-action="Index" class="btn btn-light">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>

        <div class="content-card">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="mb-0"><i class="bi bi-list-ul"></i> All Users</h3>
                <button class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New User
                </button>
            </div>

            <div class="table-card">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th><i class="bi bi-person"></i> Name</th>
                                <th><i class="bi bi-envelope"></i> Email</th>
                                <th><i class="bi bi-shield-check"></i> Role</th>
                                <th><i class="bi bi-check-circle"></i> Email Confirmed</th>
                                <th><i class="bi bi-gear"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Users != null && ((List<object>)ViewBag.Users).Count > 0)
                            {
                                @foreach (dynamic user in (List<object>)ViewBag.Users)
                                {
                                    <tr>
                                        <td>@user.FirstName @user.LastName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            @if (user.Roles.ToString().Contains("Admin"))
                                            {
                                                <span class="badge bg-danger">Admin</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-primary">User</span>
                                            }
                                        </td>
                                        <td>@(user.EmailConfirmed ? "Yes" : "No")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-sm btn-outline-primary" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-outline-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                        <p class="mt-3 mb-0">No users found. Users will appear here once they register.</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card feature-card">
                    <div class="card-body text-center">
                        <div class="feature-icon">
                            <i class="bi bi-person-check"></i>
                        </div>
                        <h6 class="card-title">Active Users</h6>
                        <h3 class="text-primary">@ViewBag.TotalUsers</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card">
                    <div class="card-body text-center">
                        <div class="feature-icon">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <h6 class="card-title">Admins</h6>
                        <h3 class="text-success">@ViewBag.AdminCount</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card">
                    <div class="card-body text-center">
                        <div class="feature-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <h6 class="card-title">Regular Users</h6>
                        <h3 class="text-info">@ViewBag.RegularUserCount</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

