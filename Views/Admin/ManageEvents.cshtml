@{
    ViewData["Title"] = "Manage Events";
}

<div class="dashboard-container admin-dashboard">
    <div class="container">
        <div class="admin-page-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="bi bi-calendar-event"></i> Event Management</h1>
                    <p class="mb-0">Create, edit, and manage all events in the system</p>
                </div>
                <a asp-action="Index" class="btn btn-light">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>

        <div class="content-card text-center py-5">
            <div class="mb-4">
                <i class="bi bi-calendar-event" style="font-size: 4rem; color: #0d6efd;"></i>
            </div>
            <h3>Event Management</h3>
            <p class="text-muted mb-4">Click the button below to access the full event management system</p>
            <a asp-controller="Event" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-arrow-right-circle"></i> Go to Event Management
            </a>
        </div>
    </div>
</div>

