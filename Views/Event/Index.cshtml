@model IEnumerable<EventBookingSystem.Models.Event>
@{
    ViewData["Title"] = "Manage Events";
}

<div class="dashboard-container admin-dashboard">
    <div class="container">
        <div class="admin-page-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="bi bi-calendar-event"></i> Event Management</h1>
                    <p class="mb-0">Create, edit, and manage all events in the system</p>
                </div>
                <div>
                    <a asp-action="Index" asp-controller="Admin" class="btn btn-light me-2">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Event
                    </a>
                </div>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Statistics Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="card feature-card">
                    <div class="card-body text-center">
                        <div class="feature-icon">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <h6 class="card-title">Upcoming Events</h6>
                        <h3 class="text-primary">@ViewBag.UpcomingEvents</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card">
                    <div class="card-body text-center">
                        <div class="feature-icon">
                            <i class="bi bi-calendar-event"></i>
                        </div>
                        <h6 class="card-title">Total Events</h6>
                        <h3 class="text-success">@ViewBag.TotalEvents</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card">
                    <div class="card-body text-center">
                        <div class="feature-icon">
                            <i class="bi bi-ticket-perforated"></i>
                        </div>
                        <h6 class="card-title">Total Bookings</h6>
                        <h3 class="text-info">@ViewBag.TotalBookings</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search and Filter -->
        <div class="content-card mb-4">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" name="searchString" class="form-control" 
                               placeholder="Search by name, location, or description..." 
                               value="@ViewData["CurrentFilter"]" />
                    </div>
                </div>
                <div class="col-md-2">
                    <select name="sortOrder" class="form-select" onchange="this.form.submit()">
                        <option value="" selected="@(ViewData["CurrentSort"]?.ToString() == "" || ViewData["CurrentSort"] == null)">Sort by Name</option>
                        <option value="name_desc" selected="@(ViewData["CurrentSort"]?.ToString() == "name_desc")">Name (Z-A)</option>
                        <option value="Date" selected="@(ViewData["CurrentSort"]?.ToString() == "Date")">Date (Oldest)</option>
                        <option value="date_desc" selected="@(ViewData["CurrentSort"]?.ToString() == "date_desc")">Date (Newest)</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
        </div>

        <!-- Events Table -->
        <div class="content-card">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="mb-0"><i class="bi bi-list-ul"></i> All Events</h3>
                <span class="text-muted">Showing @((ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1) - @(Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalCount)) of @ViewBag.TotalCount</span>
            </div>

            <div class="table-card">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th><i class="bi bi-image"></i> Image</th>
                                <th><i class="bi bi-calendar3"></i> Event Name</th>
                                <th><i class="bi bi-calendar-date"></i> Date</th>
                                <th><i class="bi bi-clock"></i> Time</th>
                                <th><i class="bi bi-geo-alt"></i> Location</th>
                                <th><i class="bi bi-people"></i> Capacity</th>
                                <th><i class="bi bi-currency-dollar"></i> Price</th>
                                <th><i class="bi bi-toggle-on"></i> Status</th>
                                <th><i class="bi bi-gear"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ImagePath))
                                            {
                                                <img src="@item.ImagePath" alt="@item.Name" class="event-thumbnail" />
                                            }
                                            else
                                            {
                                                <div class="event-thumbnail-placeholder">
                                                    <i class="bi bi-image"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <strong>@item.Name</strong>
                                            @if (item.Description?.Length > 50)
                                            {
                                                <br /><small class="text-muted">@item.Description.Substring(0, 50)...</small>
                                            }
                                            else if (!string.IsNullOrEmpty(item.Description))
                                            {
                                                <br /><small class="text-muted">@item.Description</small>
                                            }
                                        </td>
                                        <td>@item.EventDate.ToString("MMM dd, yyyy")</td>
                                        <td>@item.EventTime.ToString(@"hh\:mm")</td>
                                        <td>@item.Location</td>
                                        <td>@item.Capacity</td>
                                        <td>
                                            @if (item.Price == 0)
                                            {
                                                <span class="badge bg-success">Free</span>
                                            }
                                            else
                                            {
                                                <span>$@item.Price.ToString("F2")</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="text-center py-5 text-muted">
                                        <i class="bi bi-calendar-x" style="font-size: 3rem;"></i>
                                        <p class="mt-3 mb-0">No events found. Create your first event to get started.</p>
                                        <a asp-action="Create" class="btn btn-primary mt-3">
                                            <i class="bi bi-plus-circle"></i> Create New Event
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pagination -->
            @if (ViewBag.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-sortOrder="@ViewData["CurrentSort"]">
                                <i class="bi bi-chevron-left"></i> Previous
                            </a>
                        </li>
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-sortOrder="@ViewData["CurrentSort"]">@i</a>
                            </li>
                        }
                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-sortOrder="@ViewData["CurrentSort"]">
                                Next <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

<style>
    .event-thumbnail {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 4px;
    }

    .event-thumbnail-placeholder {
        width: 60px;
        height: 60px;
        background-color: #f0f0f0;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #999;
        font-size: 1.5rem;
    }
</style>

