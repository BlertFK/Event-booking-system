@model EventBookingSystem.Models.Event
@{
    ViewData["Title"] = "Delete Event";
}

<div class="dashboard-container admin-dashboard">
    <div class="container">
        <div class="admin-page-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="bi bi-trash"></i> Delete Event</h1>
                    <p class="mb-0">Are you sure you want to delete this event?</p>
                </div>
                <a asp-action="Index" class="btn btn-light">
                    <i class="bi bi-arrow-left"></i> Back to Events
                </a>
            </div>
        </div>

        <div class="content-card">
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-triangle"></i> <strong>Warning!</strong> This action cannot be undone. All associated data will be permanently deleted.
            </div>

            <div class="row">
                <div class="col-md-8">
                    <h3>@Model.Name</h3>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3">
                            <i class="bi bi-card-text"></i> Description:
                        </dt>
                        <dd class="col-sm-9">
                            @Model.Description
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-calendar-date"></i> Event Date:
                        </dt>
                        <dd class="col-sm-9">
                            @Model.EventDate.ToString("MMMM dd, yyyy")
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-clock"></i> Event Time:
                        </dt>
                        <dd class="col-sm-9">
                            @Model.EventTime.ToString(@"hh\:mm")
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-geo-alt"></i> Location:
                        </dt>
                        <dd class="col-sm-9">
                            @Model.Location
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-people"></i> Capacity:
                        </dt>
                        <dd class="col-sm-9">
                            @Model.Capacity
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-currency-dollar"></i> Price:
                        </dt>
                        <dd class="col-sm-9">
                            @if (Model.Price == 0)
                            {
                                <span class="badge bg-success">Free</span>
                            }
                            else
                            {
                                <span>$@Model.Price.ToString("F2")</span>
                            }
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-toggle-on"></i> Status:
                        </dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-calendar"></i> Created:
                        </dt>
                        <dd class="col-sm-9">
                            @Model.CreatedDate.ToString("MMMM dd, yyyy HH:mm")
                        </dd>
                    </dl>
                </div>

                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="bi bi-image"></i> Event Image</h5>
                            </div>
                            <div class="card-body text-center">
                                <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded" />
                            </div>
                        </div>
                    }
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Event
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

