@model ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="dashboard-container user-dashboard">
    <div class="container">
        <div class="admin-page-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="bi bi-person-circle"></i> My Profile</h1>
                    <p class="mb-0">View and manage your account information</p>
                </div>
                <a asp-action="Edit" class="btn btn-light">
                    <i class="bi bi-pencil-square"></i> Edit Profile
                </a>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row g-4">
            <div class="col-md-8">
                <div class="content-card">
                    <h3 class="mb-4"><i class="bi bi-info-circle"></i> Personal Information</h3>
                    
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong><i class="bi bi-person"></i> First Name:</strong>
                        </div>
                        <div class="col-md-9">
                            @Model.FirstName
                        </div>
                    </div>

                    <hr>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong><i class="bi bi-person"></i> Last Name:</strong>
                        </div>
                        <div class="col-md-9">
                            @Model.LastName
                        </div>
                    </div>

                    <hr>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong><i class="bi bi-envelope"></i> Email:</strong>
                        </div>
                        <div class="col-md-9">
                            @Model.Email
                        </div>
                    </div>

                    <hr>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong><i class="bi bi-telephone"></i> Phone Number:</strong>
                        </div>
                        <div class="col-md-9">
                            @(Model.PhoneNumber ?? "Not provided")
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="content-card">
                    <h5 class="mb-4"><i class="bi bi-shield-lock"></i> Account Security</h5>
                    <p class="text-muted mb-3">Keep your account secure by regularly updating your password.</p>
                    <a asp-action="ChangePassword" class="btn btn-primary w-100">
                        <i class="bi bi-key"></i> Change Password
                    </a>
                </div>

                <div class="content-card mt-4">
                    <h5 class="mb-4"><i class="bi bi-gear"></i> Quick Actions</h5>
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" class="btn btn-outline-primary">
                            <i class="bi bi-pencil-square"></i> Edit Profile
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-house"></i> Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

