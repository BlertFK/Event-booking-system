@model EventBookingSystem.Models.Booking
@{
    var ev = ViewBag.Event;
    var available = ViewBag.AvailableSeats ?? 0;
    ViewData["Title"] = "Book Event";
}

<h2>Book: @ev?.Title</h2>

<div>
    <p><strong>Date:</strong> @ev?.Date</p>
    <p><strong>Capacity:</strong> @(ev?.Capacity ?? 0)</p>
    <p><strong>Available seats:</strong> @available</p>
</div>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="EventId" />

    <div class="form-group">
        <label asp-for="SeatCount"></label>
        <input asp-for="SeatCount" class="form-control" />
        <span asp-validation-for="SeatCount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Book</button>
    <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
