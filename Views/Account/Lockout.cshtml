@{
    ViewData["Title"] = "Account Locked";
}

<div class="auth-container">
    <div class="auth-card text-center">
        <div class="mb-4">
            <i class="bi bi-lock-fill" style="font-size: 5rem; color: #ffc107;"></i>
        </div>
        <h2 class="text-warning mb-3">@ViewData["Title"]</h2>
        <p class="text-muted mb-4">This account has been temporarily locked due to multiple failed login attempts. Please try again later or contact an administrator for assistance.</p>
        <div class="d-grid gap-2 d-md-block">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-house"></i> Return to Home
            </a>
        </div>
    </div>
</div>

