@{
    ViewData["Title"] = "Access Denied";
}

<div class="auth-container">
    <div class="auth-card text-center">
        <div class="mb-4">
            <i class="bi bi-shield-x" style="font-size: 5rem; color: #dc3545;"></i>
        </div>
        <h2 class="text-danger mb-3">@ViewData["Title"]</h2>
        <p class="text-muted mb-4">You do not have permission to access this resource. Please contact an administrator if you believe this is an error.</p>
        <div class="d-grid gap-2 d-md-block">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-house"></i> Return to Home
            </a>
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                <i class="bi bi-box-arrow-in-right"></i> Login as Different User
            </a>
        </div>
    </div>
</div>

